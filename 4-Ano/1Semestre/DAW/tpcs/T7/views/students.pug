extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Lista de Alunos (DAW2020)
        if list.length > 0
            .w3-container
                table.w3-table-all
                    tr
                        th Número
                        th Nome
                        th Git
                        th
                    each s in list
                        tr
                            td
                                a(href="/students/:" + s.numero)= s.numero
                            td= s.nome
                            td
                                a(href=s.git)=s.git 
                            td
                                a(href="/students/edit/:" + s.numero).w3-button.w3-khaki.w3-round-small Editar
                                a(href="/students/delete/:" + s.numero).w3-button.w3-deep-orange.w3-round-small Delete
        else
            div.w3-container
                p Ainda não há alunos.
    .w3-container.w3-teal
        footer.w3-container
            p
                a(href="/") Voltar à página principal